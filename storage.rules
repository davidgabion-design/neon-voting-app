rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all images
    match /organizations/{orgId}/{path=**} {
      allow read: if true;
      allow write: if 
        request.auth != null &&
        (
          // SuperAdmin
          request.auth.token.superAdmin == true ||
          // EC of the organization
          request.auth.token.role == 'ec' &&
          request.auth.token.orgId == orgId
        );
    }
  }
}